{
    "name": "Bully Busters",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Detects cyber-bullying on social media",

    "icons": {
        "64": "images/icon64.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_icon": {
            "64": "images/icon64.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup.html",
        "default_title": "A popup will come here."
    },

    "background": {
        "service_worker" : "background.js"
    },

    "permissions": ["activeTab", 
                    "scripting",
                    "storage",
                    "tabs"
    ],
    "host_permissions": ["<all_urls>"],

    "options_ui": {
        "page": "options.html"
    }
}
