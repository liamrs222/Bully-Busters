{
    "name": "Bully Busters",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Detects cyber-bullying on social media",

    "permissions": ["tabs", "storage", "activeTab" ],
    "host_permissions": ["<all_urls>"],

    "content_scripts":
    [

    ], 
    "icons": {
        "64": "images/icon64.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_icon": {
            "64": "images/icon64.png",
            "128": "images/icon128.png"
        }, 
        "default_popup" : "popup.html",
        "default_title" : "main menu"
        
    },
    "background": {
        "service_worker": "text_censor.js"
    } 
}
